@model uStoreProject.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}

<article class="container box style3">
    <header>
        <h2>Contact Us</h2>
    </header>
    <div class="contact-form">
        <div class="status alert alert-success" style="display: none"></div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "invalid" })
            <div class="row gtr-50">
                <div class="col-6 col-12-mobile">
                    @Html.TextBoxFor(model => model.Name, new
               {
                   @class = "form-control",
                   @placeholder = "Name"
               })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "invalid" })
                </div>

                <div class="col-6 col-12-mobile">
                    @Html.TextBoxFor(model => model.Email, new
               {
                   @class = "form-control",
                   @placeholder = "Email"
               })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "invalid" })
                </div>

                <div class="col-12">
                    @Html.TextBoxFor(model => model.Subject, new
               {
                   @class = "form-control",
                   @placeholder = "Subject"
               })
                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "invalid" })
                </div>

                <div class="col-12">
                    @Html.TextAreaFor(model => model.Message, new
               {
                   @class = "form-control",
                   @placeholder = "Your Message Here",
                   @id = "message",
                   @rows = 8
               })
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "invalid" })
                </div>

                <div class="col-12">
                    <ul class="actions">
                        <li><input type="submit" name="submit" value="Send Message" /></li>
                    </ul>
                </div>
            </div>
        }<!-- </form> -->
    </div>
</article>
